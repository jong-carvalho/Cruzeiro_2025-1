<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorBackground">

    <!-- Exibir as letras da palavra oculta -->
    <TextView
        android:id="@+id/textViewWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/word_placeholder"
        android:textSize="24sp"
        android:textColor="@color/colorText"
        android:layout_gravity="center"
        android:paddingBottom="20dp"/>

    <!-- Número de tentativas restantes -->
    <TextView
        android:id="@+id/textViewAttempts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/attempts_label"
        android:textSize="18sp"
        android:textColor="@color/colorText"
        android:layout_gravity="center"
        android:paddingBottom="20dp"/>

    <!-- Campo de entrada para tentar a letra -->
    <EditText
        android:id="@+id/editTextGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/guess_letter_hint"
        android:inputType="text"
        android:maxLength="1"
        android:layout_gravity="center"
        android:padding="10dp"/>

    <!-- Botão para enviar a tentativa -->
    <Button
        android:id="@+id/buttonGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/try_button_text"
        android:textColor="@color/colorSecondary"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="20dp"/>

    <!-- Status do jogo (Vitória ou Derrota) -->
    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:layout_gravity="center"
        android:paddingTop="20dp"/>
</LinearLayout>
